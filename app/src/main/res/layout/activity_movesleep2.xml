<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa"
        android:icon="@drawable/ic_launcher"
        >

        <TextView
            android:id="@+id/lastnight"
            android:text=""
            android:textSize="28dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="150dp"

            android:layout_marginTop="25dp" />





        <TextView
            android:id="@+id/visual"
            android:text="How would you rate your capability to move?"
            android:textSize="24dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginStart="40dp"
            android:paddingTop="25dp" />

        <TextView
            android:id="@+id/nodiff"
            android:text="No motor difficulty"
            android:textSize="24dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginStart="40dp"
            android:paddingTop="25dp" />

        <TextView
            android:id="@+id/severe"
            android:text="Very severe motor difficulty"
            android:textSize="24dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:paddingTop="25dp"
            android:layout_marginLeft="440dp" />


        <SeekBar
            android:layout_width="665dp"
            android:layout_height="wrap_content"
            android:id="@+id/s_move"
            android:layout_marginTop="65dp"
            android:max="10"
            android:progress="0"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="50dp"
            />


        <TextView
            android:id="@+id/stanford"
            android:text="Standford Sleepiness Scale"
            android:textSize="24dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginStart="40dp"
            android:paddingTop="25dp"
            />

        <TextView
            android:id="@+id/stanford"
            android:text="Using the 7-points scale below pick what best represents how you are feeling and note the corresponding number on the chart below."
            android:textSize="24dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginStart="40dp"
            android:paddingTop="25dp"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafafa"
            android:layout_row="6"
            android:layout_column="0"
            >

            <TextView
                android:id="@+id/stanford"
                android:text="Degree of Sleepiness"
                android:textSize="24dp"
                android:textColor="#000000"
                android:background="#E6E6FA"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginStart="40dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="Scale Rating"
                android:textSize="24dp"
                android:textColor="#000000"
                android:background="#E6E6FA"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="-50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="Feeling active, vital, alert, or wide awake"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginStart="40dp"
                android:paddingBottom="10dp"

                android:layout_marginTop="10dp"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="1"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginStart="0dp"

                android:paddingBottom="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="Functioning at high levels, but not fully alert"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginStart="40dp"
                android:paddingBottom="10dp"

                android:layout_marginTop="10dp"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="2"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginStart="0dp"

                android:paddingBottom="10dp"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/stanford"
                android:text="Awake, but relaxed; responsive but not fully alert"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginStart="40dp"
                android:paddingBottom="10dp"

                android:layout_marginTop="10dp"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="3"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginStart="0dp"

                android:paddingBottom="10dp"
                android:layout_marginTop="10dp" />



            <TextView
                android:id="@+id/stanford"
                android:text="Somewhat foggy, let down"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginStart="40dp"
                android:paddingBottom="10dp"

                android:layout_marginTop="10dp"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="4"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_marginStart="0dp"

                android:paddingBottom="10dp"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/stanford"
                android:text="Foggy, losing interest in remaining awake; slowed down"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_marginStart="40dp"
                android:paddingBottom="10dp"

                android:layout_marginTop="10dp"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="5"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_marginStart="0dp"

                android:paddingBottom="10dp"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/stanford"
                android:text="Sleepy, woozy, fighting sleep; prefer to lie down"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_marginStart="40dp"
                android:paddingBottom="10dp"

                android:layout_marginTop="10dp"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="6"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_marginStart="0dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="No longer fighting sleep, sleep onset soon; having dream-like thoughts"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_marginStart="40dp"
                android:paddingBottom="10dp"

                android:layout_marginTop="10dp"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="7"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_marginStart="0dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="Asleep"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_marginStart="40dp"
                android:paddingBottom="10dp"

                android:layout_marginTop="10dp"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/stanford"
                android:text="X"
                android:textSize="24dp"
                android:textColor="#000000"

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="1"
                android:layout_marginStart="0dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="15dp" />

        </GridLayout>

        <TextView
            android:id="@+id/sleepscale"
            android:text="0 point"
            android:textSize="24dp"
            android:textColor="#000000"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_marginStart="-150dp"

            android:layout_marginTop="15dp" />

        <SeekBar
            android:layout_width="665dp"
            android:layout_height="wrap_content"
            android:id="@+id/s_sleep"
            android:layout_marginTop="35dp"
            android:max="10"
            android:progress="0"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_marginLeft="50dp"
            />


        <RadioGroup
            android:id="@+id/buttongroup"
            android:layout_width="472dp"
            android:layout_height="180dp"
            android:layout_marginStart="160dp"
            android:orientation="horizontal"
            android:minHeight="100dp"
            android:minWidth="200dp"
            android:paddingTop="35dp"
            android:layout_row="14"
            android:layout_column="0">


            <Button
                android:id="@+id/cancel_ms2"
                android:width="200dp"
                android:height="45dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"

                android:textSize="25dp"
                android:background="#BDBDBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="button_ms2dOnClick" />

            <Button
                android:id="@+id/save_ms2"
                android:width="200dp"
                android:height="45dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Save"
                android:textAllCaps="false"
                android:layout_marginStart="50dp"
                android:layout_centerHorizontal="true"

                android:textSize="25dp"
                android:background="#BDBDBD"
                android:layout_weight="4.69"
                android:checked="false"
                android:onClick="button_ms2dOnClick" />

        </RadioGroup>



    </GridLayout>
</ScrollView>