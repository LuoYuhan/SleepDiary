<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    >

    <TextView
        android:id="@+id/nap"
        android:text="I naped for"
        android:textSize="28dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginStart="40dp"
        android:paddingTop="55dp"
        />

    <Button
        android:id="@+id/naptime"
        android:width="140dp"
        android:height="29dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0 minute"

        android:layout_marginEnd="40dp"
        android:layout_centerHorizontal="true"

        android:textSize="26dp"
        android:background="#959595"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/caff"
        android:text="I had caffeinated drinks \n What time did you have \n your last caffeinated drink"
        android:textSize="28dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginStart="40dp"
        android:paddingTop="25dp"
        />

    <Button
        android:id="@+id/drinktime"
        android:width="140dp"
        android:height="29dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Pick Time"

        android:layout_marginEnd="40dp"
        android:layout_centerHorizontal="true"

        android:textSize="26dp"
        android:background="#959595"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/alco"
        android:text="I had alcoholic drinks \n What time did you have \n your last alcoholic drink"
        android:textSize="28dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginStart="40dp"
        android:paddingTop="25dp"
        />

    <Button
        android:id="@+id/alcotime"
        android:width="140dp"
        android:height="29dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Pick Time"

        android:layout_marginEnd="40dp"
        android:layout_centerHorizontal="true"

        android:textSize="26dp"
        android:background="#959595"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginTop="50dp" />


    <TextView
        android:id="@+id/tobacco"
        android:text="I used tobacco \n What time did you have \n your last tobacco"
        android:textSize="28dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginStart="40dp"
        android:paddingTop="25dp"
        />

    <Button
        android:id="@+id/tobactime"
        android:width="140dp"
        android:height="29dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Pick Time"

        android:layout_marginEnd="40dp"
        android:layout_centerHorizontal="true"

        android:textSize="26dp"
        android:background="#959595"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/medic"
        android:text="I took medications"
        android:textSize="28dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_marginStart="40dp"
        android:paddingTop="25dp"
        />

    <Button
        android:id="@+id/medicheck"
        android:width="140dp"
        android:height="29dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Check"

        android:layout_marginEnd="40dp"
        android:layout_centerHorizontal="true"

        android:textSize="26dp"
        android:background="#959595"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_marginTop="20dp" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/checkBox"
        android:layout_row="3"
        android:layout_column="1"
        android:minWidth="100dp"
        android:layout_marginLeft="45dp" />

    <TextView
        android:id="@+id/stress"
        android:text="How would you rate your stree level today?"
        android:textSize="28dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_marginStart="40dp"
        android:paddingTop="25dp"
        />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:minWidth="500dp" />

    <TextView
        android:id="@+id/activity"
        android:text="About 1 hour before going to bed,\n I did the following activities"
        android:textSize="28dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_marginStart="40dp"
        android:paddingTop="25dp"
        />

    <Button
        android:id="@+id/check_s"
        android:width="140dp"
        android:height="29dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Check"

        android:layout_marginEnd="40dp"
        android:layout_centerHorizontal="true"

        android:textSize="26dp"
        android:background="#959595"
        android:layout_row="8"
        android:layout_column="1"
        android:layout_marginTop="20dp" />

    <RadioGroup
        android:id="@+id/buttongroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"

        android:fadingEdge="none"
        android:orientation="horizontal"
        android:minHeight="100dp"
        android:minWidth="200dp"
        android:nestedScrollingEnabled="true"
        android:layout_row="9"
        android:layout_column="0">


        <Button
            android:id="@+id/cancel_s"
            android:width="200dp"
            android:height="45dp"
            android:text="Cancel"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="28dp"
            android:background="#959595"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:onClick="button_CIdOnClick"
            />

        <Button
            android:id="@+id/save_s"
            android:width="200dp"
            android:height="45dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Save"

            android:layout_marginStart="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="28dp"
            android:background="#959595"
            android:layout_weight="0.12"
            android:checked="false"
            android:onClick="button_CIdOnClick" />

    </RadioGroup>

    <ImageView
        android:src="@drawable/drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/caffdrink"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginTop="15dp"
        android:minHeight="50dp"
        android:minWidth="140dp" />

    <ImageView
        android:src="@drawable/drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alcodrink"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginTop="15dp"
        android:minHeight="50dp"
        android:minWidth="140dp" />
</GridLayout>
