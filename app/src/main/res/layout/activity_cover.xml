<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fafafa"
    android:icon="@drawable/ic_launcher">

    <ImageView
        android:minHeight="260dp"
        android:minWidth="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mt"
        android:src="@drawable/morningt"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_row="0"
        android:layout_column="0"

        android:onClick="CoverOnClick"
        android:layout_gravity="left"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="140dp" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/finish_braintest"
        android:src="@drawable/finish"
        android:layout_row="0"
        android:layout_column="0"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"

        android:onClick="CoverOnClick"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp" />



    <ImageView
        android:minHeight="260dp"
        android:minWidth="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adi"
        android:src="@drawable/afterdi"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="CoverOnClick"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="140dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/finish_sleepdiary"
        android:src="@drawable/finish"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:visibility="invisible"
        android:onClick="bedtimeOnClick"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp" />

    <ImageView
        android:minHeight="260dp"
        android:minWidth="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bdi"
        android:src="@drawable/beforedi"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="CoverOnClick"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/finish_sleepdiary"
        android:src="@drawable/finish"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:visibility="invisible"
        android:onClick="bedtimeOnClick"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp" />


    <ImageView
        android:minHeight="260dp"
        android:minWidth="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btt"
        android:src="@drawable/bedtest"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="CoverOnClick"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/finish_sleepdiary"
        android:src="@drawable/finish"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:visibility="invisible"
        android:onClick="bedtimeOnClick"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp" />

</GridLayout>


