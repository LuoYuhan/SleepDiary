<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#fafafa"
    android:id="@+id/layout"
    android:icon="@drawable/ic_launcher"
    >



   <TextView
       android:id="@+id/textView"
       android:text="Sleep Diary"
       android:textSize="60dp"
       android:textColor="#000000"

       android:textStyle="italic"
       android:paddingTop="90dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:focusableInTouchMode="false"
       android:typeface="serif"
       android:layout_marginTop="82dp"
       android:layout_alignParentTop="true"
       android:layout_alignStart="@+id/CreateId"
       android:layout_marginStart="42dp" />

   <Button

       android:id="@+id/CreateId"
       android:width="350dp"
       android:height="100dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Create New ID"

       android:alpha="0.9"
       android:enabled="true"
       android:focusable="false"
       android:focusableInTouchMode="false"
       android:layout_below="@+id/textView"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="86dp"
       android:textSize="30dp"
       android:background="#959595"
       android:onClick="button_createIDOnClick"
        />

   <Button
       android:id="@+id/Login"
       android:width="350dp"
       android:height="100dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Login with existing ID"

       android:alpha="0.9"
       android:layout_marginTop="76dp"
       android:layout_below="@+id/CreateId"
       android:layout_alignStart="@+id/CreateId"
       android:textSize="30dp"
       android:background="#959595"
       android:onClick="button_LoginOnClick"
       />

   <ImageView
       android:minHeight="100dp"
       android:minWidth="200dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/imageView"
       android:src="@drawable/sleepdiary2"
       android:layout_marginStart="83dp"
       android:layout_above="@+id/CreateId"
       android:layout_alignParentStart="true" />


</RelativeLayout>
