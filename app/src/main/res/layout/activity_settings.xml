<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#fafafa"
    android:id="@+id/layout"
    android:icon="@drawable/ic_launcher"
    >

    <!--<include-->
    <!--android:id="@+id/tool_bar"-->
    <!--layout="@layout/tool_bar"-->
    <!--></include>-->


    <TextView
        android:id="@+id/textView"
        android:text="Sleep Benefit"
        android:textSize="60dp"
        android:textColor="#000000"
        android:layout_row="0"
        android:layout_column="0"
        android:textStyle="italic"
        android:paddingTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:typeface="serif"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="240dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/CreateId" />

    <Button

        android:id="@+id/CreateId"
        android:width="350dp"
        android:height="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New ID"
        android:textAllCaps="false"
        android:alpha="0.9"
        android:layout_row="1"
        android:layout_column="0"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:layout_marginLeft="200dp"
        android:textSize="30dp"
        android:background="#BDBDBD"
        android:onClick="button_createIDOnClick"
        />
    <ImageView

        android:id="@+id/Logout"
        android:src = "@drawable/logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Log Out"
        android:textAllCaps="false"
        android:layout_marginLeft="650dp"
        android:layout_row="3"
        android:layout_column="0"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textSize="30dp"
        android:onClick="button_createIDOnClick"
        />

    <Button
        android:id="@+id/Login"
        android:width="350dp"
        android:height="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with existing ID"
        android:textAllCaps="false"
        android:alpha="0.9"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/CreateId"
        android:layout_alignLeft="@+id/CreateId"
        android:textSize="30dp"
        android:layout_marginLeft="200dp"
        android:background="#BDBDBD"
        android:onClick="button_LoginOnClick"
        />

    <ImageView
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/imageView"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="120dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentLeft="true" />


</GridLayout>
