<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@android:color/white"
        android:orientation="vertical" >
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical" >


            <ImageView

                android:id="@+id/alertsymbol"
                android:src = "@drawable/alert"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="Log Out"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:layout_row="0"
                android:layout_column="0"
                android:enabled="true"
                android:focusable="false"
                android:focusableInTouchMode="false"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:onClick="button_createIDOnClick"
                />


            <TextView
                android:id="@+id/text"
                android:text="      Are you sure you had \nmore than 12 hours sleep \nbefore move on?"
                android:textSize="22dp"
                android:textColor="#8B8989"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:typeface="sans"
                android:layout_weight="0.12"
                android:layout_row="0"
                android:layout_column="0"

                />

            <Button
                android:id="@+id/cancel_long"
                android:textAllCaps="false"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#008b8b"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="0dp"
                android:layout_row="1"
                android:layout_column="0"
                android:text="CANCEL"
                />

            <Button
                android:id="@+id/ok_long"
                android:textAllCaps="false"
                android:textColor="#008b8b"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="60dp"
                android:text="OK" />

        </GridLayout>
    </LinearLayout>

</LinearLayout>